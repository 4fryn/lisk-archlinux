# Maintainer: 4fryn <arch@4fry.net>

pkgname="lisk-git"
pkgver=0.8.2.r0.g645c436
pkgrel=1
pkgdesc="The lisk core blockchain application. (Latest Git Version)"
arch=("x86_64")
url="https://lisk.io"
license=("GPL3")
groups=("lisk")
provides=("lisk")
conflicts=("lisk")
depends=(
  "sudo"
  "readline"
  "postgresql"
  "nodejs"
  "npm"
  "pm2"
)
makedeps=(
  "wget"
  "curl"
  "tar"
  "make"
  "gcc"
  "unzip"
  "zip"
  "python2"
  "bower"
  "grunt"
)
source=(
  "${pkgname}::git+https://github.com/LiskHQ/lisk.git#branch=master"
  "lisk-node::git+https://github.com/LiskHQ/lisk-node.git"
)
sha256sums=(
  "SKIP"
  "SKIP"
)

pkgver() {
  cd "$pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  msg2 "Building lisk-node..."
  pushd "${srcdir}/lisk-node"
    python2 ./configure
    make
  popd

  msg2 "Building lisk-core..."
  pushd "${srcdir}/${pkgname}"
    npm install
    mkdir -p "${srcdir}/${pkgname}/nodejs/node"
    cp -a "${srcdir}/lisk-node/*" "${srcdir}/${pkgname}/nodejs/node/"
    git submodule init
    git submodule update
  popd

  msg2 "Building user interface..."
  pushd "${srcdir}/${pkgname}/public"
    npm install
    bower install
    grunt release
  popd
}

package() {
  msg2 "Packaging..."
}
